@model KoleksiyoncuCom.WebUi.Bussiness.Models.RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/_Layout.cshtml";
}
@section Scripts {
    <script src="~/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="container-fluid">
    <div class="row">
        <div class="col-4"></div>
        <div class="text-center col-4">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }
        <form class="form-signin" asp-controller="Hesap" asp-action="KayitOl" method="post">
            <h1 class="text-success">Koleksiyoncu | Bussiness</h1>
            <h3 class="h3 mb-3 font-weight-normal">Kayıt Ol</h3>
            <label asp-for="EmailAdress" class="sr-only"></label>
            <input asp-for="EmailAdress" value="@Model.EmailAdress" class="form-control" placeholder="E-Posta Adresi">
            <span asp-validation-for="EmailAdress" class="text-danger"></span>
            <label asp-for="NameAndSurname" class="sr-only"></label>
            <input asp-for="NameAndSurname" value="@Model.NameAndSurname" class="form-control" placeholder="Kullanıcı Adı">
            <span asp-validation-for="NameAndSurname" class="text-danger"></span>
            <label asp-for="Password" class="sr-only"></label>
            <input asp-for="Password" value="@Model.Password" class="form-control" placeholder="Parola">
            <span asp-validation-for="Password" class="text-danger"></span>
            <label asp-for="RePassword" class="sr-only"></label>
            <input asp-for="RePassword" value="@Model.RePassword" class="form-control" placeholder="Parola Tekrar">
            <span asp-validation-for="RePassword" class="text-danger"></span>
            <label asp-for="Location" class="sr-only"></label>
            <input asp-for="Location" value="@Model.Location" class="form-control" placeholder="İl,ilçe">
            <span asp-validation-for="Location" class="text-danger"></span>
            <label asp-for="PhoneNumber" class="sr-only"></label>
            <input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control" placeholder="Telefon Numarası">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            <button class="btn btn-lg btn-success btn-block" type="submit">Kayıt Ol</button>
            <p class="mt-5 mb-3 text-muted">&copy;2019 Duru Yazılım Teknolojileri A.Ş.</p>
        </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>

